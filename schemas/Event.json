{
  "schema" : {
    "title": "Event",
    "type": "object",
    "properties": {
      "name": { "type": "string" , "title": "Name"},
      "description": { "type": "string", "title": "About"},
      "url":  { "type" : "string", "title": "Homepage"},
      "image": { "type": "string" , "title": "Image URL"},
      "startDate": { "type": "string", "title": "Start Date"},
      "endDate": { "type": "string", "title": "End date"},
      "organizer": {
        "type": "array",
        "uniqueItems": true,
        "title": "Organizers",
        "items": {
          "type": "object",
          "title": "Organizer",
            "properties": {
            "name": { "type": "string", "title": "Name"},
            "website": { "type": "string", "title": "Homepage"}
          }
        }
      },
      "performer": {
        "type": "array",
        "uniqueItems": true,
        "title": "Performers",
        "items": {
          "type": "object",
          "title": "Performer",
            "properties": {
            "name": { "type": "string", "title": "Name"},
            "website": { "type": "string", "title": "Homepage"}
          }
        }
      },
      "eventStatus" : {
        "type": "string",
        "title":"Status",
        "enum": [
          "Scheduled",
          "Cancelled",
          "Postponed",
          "Rescheduled"
        ]
      },
      "location": {
        "type": "array",
        "uniqueItems": true,
        "title": "Locations",
        "items": {
          "type": "object",
          "title": "Location",
            "properties": {
            "street": { "type": "string", "title": "Street"},
            "code": { "type": "string", "title": "Zip code"},
            "city": { "type" : "string", "title": "City"},
            "country": { "type" : "string", "title": "Country"}
          }
        }
      },
      "workPerformed": {
        "type": "array",
        "uniqueItems": true,
        "title": "Projects participating",
        "items": {
          "type": "object",
          "title": "Project",
          "properties": {
            "name": { "type" : "string", "title": "Project name"},
            "url":  { "type" : "string", "title": "URL"}
          }
        }
      }
    }
  }
}
